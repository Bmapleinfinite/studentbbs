<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.studentbbs.dao.ArticleDao">
    <resultMap id="BaseResultMap" type="com.example.studentbbs.entity.Article">
        <id column="post_id" jdbcType="BIGINT" property="id" />
        <result column="publish_user_id" jdbcType="BIGINT" property="userId" />
        <result column="post_title" jdbcType="VARCHAR" property="title" />
        <result column="post_content" jdbcType="VARCHAR" property="content" />
        <result column="post_category_id" jdbcType="BIGINT" property="categoryID" />
        <result column="post_category_name" jdbcType="VARCHAR" property="categoryName" />
        <result column="post_status" jdbcType="TINYINT" property="articleStatus" />
        <result column="post_views" jdbcType="BIGINT" property="views" />
        <result column="post_comments" jdbcType="BIGINT" property="comments" />
        <result column="post_collects" jdbcType="BIGINT" property="collects" />
        <result column="post_likes" jdbcType="BIGINT" property="likes" />
        <result column="last_update_time" jdbcType="TIMESTAMP" property="lastUpdateTime" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    </resultMap>
    <sql id="Base_Column_List">
        post_id, publish_user_id, post_title, 
        post_content, post_category_id, 
        post_category_name, post_status, 
        post_views, post_comments, post_collects
        post_likes, last_update_time, create_time
    </sql>
    <select id="getAllArticleByParams" resultMap="BaseResultMap">
        select 
        <include refid="Base_Column_List" />
        from tb_bbs_post
        WHERE post_status = 1
        <if test="categoryId!=null and categoryId!=''">
            and post_category_id = #{categoryId}
        </if>
        <if test="keyword!=null and keyword!=''">
            and post_title like CONCAT('%',#{keyword},'%')
        </if>
        <if test="orderby=='time'">
            ORDER BY last_update_time DESC;
        </if>
        <if test="orderby=='like'">
            ORDER BY post_likes DESC;
        </if>
    </select>
    <select id="getAllArticleByLikes" resultMap="BaseResultMap">
        select 
        <include refid="Base_Column_List" />
        from tb_bbs_post
        WHERE post_status = 1
        ORDER BY post_likes DESC;
    </select>
    <select id="getAllArticleByTime" resultMap="BaseResultMap">
        select 
        <include refid="Base_Column_List" /> 
        from tb_bbs_post 
        WHERE post_status = 1 
        ORDER BY last_update_time DESC;
    </select>
    <select id="getArticleById" resultMap="BaseResultMap">
        select 
        <include refid="Base_Column_List" /> 
        from tb_bbs_post 
        WHERE post_status = 1 and post_id = #{id}
    </select>
    <insert id="articlePub" keyProperty="id" useGeneratedKeys="true">
        insert into
        tb_bbs_post (publish_user_id, post_title, post_content, post_category_id, post_category_name)
        values(#{userId}, #{title}, #{content}, #{categoryID}, #{categoryName})
    </insert>
</mapper>