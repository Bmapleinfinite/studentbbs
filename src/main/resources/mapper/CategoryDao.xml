<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.studentbbs.dao.CategoryDao">
    <resultMap id="BaseResultMap" type="com.example.studentbbs.entity.Category">
        <id column="category_id" jdbcType="BIGINT" property="id" />
        <result column="category_name" jdbcType="VARCHAR" property="categoryName" />
        <result column="category_rank" jdbcType="BIGINT" property="categoryRank" />
        <result column="is_deleted" jdbcType="TINYINT" property="isDeleted" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    </resultMap>
    <sql id="Base_Column_List">
        category_id, category_name, category_rank, is_deleted, create_time
    </sql>

    <insert id="addCate" keyProperty="id" useGeneratedKeys="true">
        insert into
        tb_post_category (category_name, category_rank)
        values(#{category_name}, #{category_rank})
    </insert>

    <select id="getAllCategory" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from tb_post_category ORDER BY category_rank DESC
    </select>

    <update id="updateCateStatusToFreeze">
        update 
        tb_post_category
        set is_deleted = 1
        where category_id = #{cateId}
    </update>
    
    <update id="updateCateStatusToNormal">
        update 
        tb_post_category
        set is_deleted = 0
        where category_id = #{cateId}
    </update>
    
    <update id="updateCateInfo">
        update 
        tb_post_category
        set category_name = #{cateName}, 
        category_rank = #{cateRank}
        where category_id = #{cateId}
    </update>

    <delete id="deleteCateById">
        delete
        from tb_post_category
        where category_id = #{cateId}
    </delete>

    <select id="getCateFBData" resultType="com.example.studentbbs.dto.CommonDataDto">
        SELECT b.category_name as name, count(a.post_id) as value
        from tb_bbs_post as a,
             tb_post_category as b
        WHERE a.post_category_id = b.category_id
        GROUP BY post_category_id
    </select>
</mapper>